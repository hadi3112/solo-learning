<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="levelsplayVM" type="com.muhammadsapplication.app.modules.levelsplay.data.viewmodel.LevelsplayVM"/>
    </data>
    <LinearLayout android:id="@+id/linearColumntelevisionOne"
        android:layout_height="match_parent"
        android:layout_width="match_parent" android:orientation="vertical">
        <ScrollView android:clipToPadding="false"
            android:fillViewport="true"
            android:gravity="center_horizontal"
            android:id="@+id/scrollViewScrollview"
            android:layout_height="0dp" android:layout_weight="1" android:layout_width="match_parent">
            <LinearLayout android:id="@+id/linearLevelsplay"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_99pxv"
                android:layout_width="match_parent" android:orientation="vertical">
                <FrameLayout android:id="@+id/frameStacktelevision"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="@dimen/_97pxv" android:layout_width="@dimen/_101pxh">
                    <ImageView android:id="@+id/imageTelevisionOne"
                        android:layout_gravity="bottom|start"
                        android:layout_height="@dimen/_70pxh"
                        android:layout_width="@dimen/_39pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_television_blue_900"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_television_blue_900"/>
                    <ImageView android:id="@+id/imageUserOne"
                        android:layout_gravity="bottom|end"
                        android:layout_height="@dimen/_70pxh"
                        android:layout_width="@dimen/_39pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_user_blue_900"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_user_blue_900"/>
                    <ImageView android:id="@+id/imageUserThree"
                        android:layout_gravity="top|start"
                        android:layout_height="@dimen/_38pxh"
                        android:layout_marginStart="@dimen/_20pxh"
                        android:layout_marginTop="@dimen/_17pxv"
                        android:layout_width="@dimen/_30pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_user_blue_900_38x30"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_user_blue_900_38x30"/>
                    <ImageView android:id="@+id/imageUserFive"
                        android:layout_gravity="top|end"
                        android:layout_height="@dimen/_38pxh"
                        android:layout_marginEnd="@dimen/_20pxh"
                        android:layout_marginTop="@dimen/_17pxv"
                        android:layout_width="@dimen/_30pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_user_38x30"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_user_38x30"/>
                    <ImageView android:id="@+id/imageTelevision"
                        android:layout_gravity="top|start"
                        android:layout_height="@dimen/_23pxh"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_32pxv"
                        android:layout_width="@dimen/_27pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_television"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_television"/>
                    <ImageView android:id="@+id/imageTelevisionFive"
                        android:layout_gravity="top|end"
                        android:layout_height="@dimen/_22pxh"
                        android:layout_marginEnd="@dimen/_23pxh"
                        android:layout_marginTop="@dimen/_32pxv"
                        android:layout_width="@dimen/_27pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_television"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_television"/>
                    <ImageView android:id="@+id/imageUserSeven"
                        android:layout_gravity="top|center"
                        android:layout_height="@dimen/_22pxh"
                        android:layout_marginTop="@dimen/_32pxv"
                        android:layout_width="@dimen/_14pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_user_blue_900_38x30"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_user_blue_900_38x30"/>
                    <ImageView android:id="@+id/imageContrastOne"
                        android:layout_gravity="top|start"
                        android:layout_height="@dimen/_41pxh"
                        android:layout_marginStart="@dimen/_5pxh"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:layout_width="@dimen/_43pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_contrast_blue_900"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_contrast_blue_900"/>
                    <ImageView android:id="@+id/imageTelevision1"
                        android:layout_gravity="top|end"
                        android:layout_height="@dimen/_42pxh"
                        android:layout_marginEnd="@dimen/_4pxh"
                        android:layout_width="@dimen/_44pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_television_blue_900_42x44"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_television_blue_900_42x44"/>
                    <LinearLayout android:id="@+id/linearUnlockelvl1"
                        android:layout_gravity="bottom|center"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_3pxv"
                        android:layout_marginEnd="@dimen/_28pxh"
                        android:layout_marginStart="@dimen/_28pxh"
                        android:layout_width="match_parent" android:orientation="vertical">
                        <LinearLayout android:gravity="center_vertical"
                            android:id="@+id/linearRowcursorOne"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent" android:orientation="horizontal">
                            <ImageView android:id="@+id/imageCursorOne"
                                android:layout_gravity="center_vertical"
                                android:layout_height="@dimen/_6pxh"
                                android:layout_width="@dimen/_10pxh"
                                android:scaleType="fitXY"
                                android:src="@drawable/img_cursor"
                                tools:ignore="ContentDescription" tools:src="@drawable/img_cursor"/>
                            <ImageView
                                android:id="@+id/imageTelevisionNine"
                                android:layout_gravity="center_vertical"
                                android:layout_height="@dimen/_6pxh"
                                android:layout_marginStart="@dimen/_12pxh"
                                android:layout_width="@dimen/_10pxh"
                                android:scaleType="fitXY"
                                android:src="@drawable/img_television_blue_900_6x10"
                                tools:ignore="ContentDescription" tools:src="@drawable/img_television_blue_900_6x10"/>
                        </LinearLayout>
                        <ImageView android:gravity="center_horizontal"
                            android:id="@+id/imageThumbsupOne"
                            android:layout_height="@dimen/_26pxh"
                            android:layout_marginTop="@dimen/_2pxv"
                            android:layout_width="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_thumbs_up_blue_900_26x45"
                            tools:ignore="ContentDescription" tools:src="@drawable/img_thumbs_up_blue_900_26x45"/>
                    </LinearLayout>
                </FrameLayout>
                <TextView android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:id="@+id/txtChallengeone"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_19pxv"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{levelsplayVM.levelsplayModel.txtChallengeone}"
                    style="@style/txtPoppinsbold16" tools:text="@string/msg_challenge_1_grade2"/>
                <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/ratingBarRatingbar"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_width="wrap_content"
                    android:numStars="5" android:rating="0" style="@style/Widget.AppCompat.RatingBar.Indicator"/>
                <View
                    android:background="@drawable/rectangle_bg_white_a700_radius_1"
                    android:id="@+id/lineLine"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="@dimen/_3pxv"
                    android:layout_marginTop="@dimen/_23pxv" android:layout_width="@dimen/_228pxh"/>
                <TextView android:id="@+id/txtDescription"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_7pxh"
                    android:layout_marginTop="@dimen/_28pxv"
                    android:layout_width="wrap_content"
                    android:text="@{levelsplayVM.levelsplayModel.txtDescription}"
                    style="@style/txtPoppinsregular16_2" tools:text="@string/msg_prerequisites"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:ellipsize="end" android:gravity="center"
                    android:id="@+id/btnPlay"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="@dimen/_48pxv"
                    android:layout_marginTop="@dimen/_29pxv"
                    android:layout_width="@dimen/_179pxh"
                    android:paddingBottom="@dimen/_9pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingStart="@dimen/_30pxh"
                    android:paddingTop="@dimen/_9pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_play"
                    android:textAllCaps="false"
                    style="@style/btnSolidRounded_2" tools:text="@string/lbl_play"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
