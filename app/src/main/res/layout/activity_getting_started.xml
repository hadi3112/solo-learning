<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="gettingStartedVM" type="com.muhammadsapplication.app.modules.gettingstarted.data.viewmodel.GettingStartedVM"/>
    </data>
    <LinearLayout android:id="@+id/linearColumngettingstarted"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_16pxv"
        android:paddingEnd="@dimen/_14pxh"
        android:paddingStart="@dimen/_14pxh"
        android:paddingTop="@dimen/_16pxv" style="@style/groupStylegray_800">
        <TextView android:ellipsize="end"
            android:gravity="center_horizontal"
            android:id="@+id/txtGettingstarted"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_36pxv"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:text="@{gettingStartedVM.gettingStartedModel.txtGettingstarted}"
            style="@style/txtPoppinsbold24" tools:text="@string/lbl_getting_started"/>
        <FrameLayout android:id="@+id/frameStackmascotimg"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_578pxv"
            android:layout_marginTop="@dimen/_16pxv" android:layout_width="@dimen/_332pxh">
            <LinearLayout android:id="@+id/linearRowspeechbubble"
                android:layout_gravity="bottom|center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="horizontal">
                <LinearLayout android:gravity="end"
                    android:id="@+id/linearColumnspeechbub"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_43pxv"
                    android:layout_width="wrap_content" android:orientation="vertical">
                    <FrameLayout android:id="@+id/frameStackspeechbubb"
                        android:layout_height="@dimen/_91pxv" android:layout_width="@dimen/_255pxh">
                        <ImageView android:id="@+id/imageSpeechbubble"
                            android:layout_gravity="center"
                            android:layout_height="@dimen/_91pxh"
                            android:layout_width="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_speech_bubble"
                            tools:ignore="ContentDescription" tools:src="@drawable/img_speech_bubble"/>
                        <TextView android:gravity="top|center"
                            android:id="@+id/txtHilookingto"
                            android:layout_gravity="top|center"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12pxv"
                            android:layout_width="match_parent"
                            android:text="@{gettingStartedVM.gettingStartedModel.txtHilookingto}"
                            style="@style/txtPoppinsregular15" tools:text="@string/msg_hi_looking_to_master"/>
                    </FrameLayout>

                    <com.asksira.loopingviewpager.indicator.CustomShapePagerIndicator
                        android:id="@+id/indicatorPagerindicator"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_60pxh"
                        android:layout_marginTop="@dimen/_16pxv" android:layout_width="wrap_content"/>
                </LinearLayout>
                <ImageView android:id="@+id/imageMascotimgOne"
                    android:layout_height="@dimen/_122pxh"
                    android:layout_marginTop="@dimen/_46pxv"
                    android:layout_width="@dimen/_77pxh"
                    android:scaleType="fitXY"
                    imageRes="@{@drawable/img_seekpng_1}"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_seekpng_1"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/linearColumnhowitwork"
                android:layout_gravity="top|center"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_21pxh"
                android:layout_marginStart="@dimen/_21pxh"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_17pxv"
                android:paddingEnd="@dimen/_21pxh"
                android:paddingStart="@dimen/_21pxh"
                android:paddingTop="@dimen/_17pxv" style="@style/groupStyleblue_900cornerRadius">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtHowitworks"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10pxh"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@{gettingStartedVM.gettingStartedModel.txtHowitworks}"
                    style="@style/txtPoppinsbold20" tools:text="@string/lbl_how_it_works"/>
                <LinearLayout android:gravity="start"
                    android:id="@+id/linearColumncourseico"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_66pxv"
                    android:layout_marginStart="@dimen/_3pxh"
                    android:layout_marginTop="@dimen/_30pxv"
                    android:layout_width="wrap_content"
                    android:orientation="vertical" style="@style/groupStylelight_blue_700cornerRadius">
                    <LinearLayout android:id="@+id/linearRowcourseicon"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_44pxh"
                        android:layout_marginStart="@dimen/_10pxh"
                        android:layout_marginTop="@dimen/_12pxv"
                        android:layout_width="wrap_content" android:orientation="horizontal">
                        <ImageView android:id="@+id/imageCourseiconOne"
                            android:layout_height="@dimen/_26pxh"
                            android:layout_marginBottom="@dimen/_33pxv"
                            android:layout_marginTop="@dimen/_2pxv"
                            android:layout_width="@dimen/_28pxh"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_kindpng_2082370"
                            tools:ignore="ContentDescription" tools:src="@drawable/img_kindpng_2082370"/>
                        <LinearLayout android:gravity="start"
                            android:id="@+id/linearColumnpickatrac"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_9pxh"
                            android:layout_width="match_parent" android:orientation="vertical">
                            <TextView android:ellipsize="end"
                                android:id="@+id/txtPickatrack"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_21pxh"
                                android:layout_width="match_parent"
                                android:singleLine="true"
                                android:text="@{gettingStartedVM.gettingStartedModel.txtPickatrack}"
                                style="@style/txtPoppinsbold15" tools:text="@string/lbl_pick_a_track"/>
                            <TextView android:id="@+id/txtChoosea"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_7pxv"
                                android:layout_width="match_parent"
                                android:text="@{gettingStartedVM.gettingStartedModel.txtChoosea}"
                                style="@style/txtPoppinsregular10" tools:text="@string/msg_choose_a_language"/>
                        </LinearLayout>
                    </LinearLayout>
                    <FrameLayout android:id="@+id/frameStacklvlupicon"
                        android:layout_height="@dimen/_172pxv"
                        android:layout_marginTop="@dimen/_13pxv" android:layout_width="@dimen/_245pxh">
                        <LinearLayout
                            android:id="@+id/linearRowlvlupicon"
                            android:layout_gravity="top|center"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_79pxv"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:paddingHorizontal="@dimen/_10pxh"
                            android:paddingVertical="@dimen/_10pxv" style="@style/groupStyleblue_A200cornerRadius">
                            <ImageView
                                android:id="@+id/imageLvlupiconOne"
                                android:layout_height="@dimen/_28pxh"
                                android:layout_marginBottom="@dimen/_43pxv"
                                android:layout_width="@dimen/_28pxh"
                                android:scaleType="fitXY"
                                android:src="@drawable/img_lvl_upicon"
                                tools:ignore="ContentDescription" tools:src="@drawable/img_lvl_upicon"/>
                            <LinearLayout android:gravity="start"
                                android:id="@+id/linearColumncompletel"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_11pxv"
                                android:layout_marginStart="@dimen/_12pxh"
                                android:layout_width="wrap_content" android:orientation="vertical">
                                <TextView android:ellipsize="end"
                                    android:id="@+id/txtCompletelevels"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:singleLine="true"
                                    android:text="@{gettingStartedVM.gettingStartedModel.txtCompletelevels}"
                                    style="@style/txtPoppinsbold15" tools:text="@string/lbl_complete_levels"/>
                                <TextView
                                    android:id="@+id/txtDescription"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5pxv"
                                    android:layout_width="match_parent"
                                    android:text="@{gettingStartedVM.gettingStartedModel.txtDescription}"
                                    style="@style/txtPoppinsregular10" tools:text="@string/msg_solve_tests_mcqs"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/linearRowmedalicon"
                            android:layout_gravity="bottom|center"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_86pxv"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:paddingHorizontal="@dimen/_10pxh"
                            android:paddingVertical="@dimen/_10pxv" style="@style/groupStylelight_blue_200_c4cornerRadius">
                            <ImageView
                                android:id="@+id/imageMedaliconOne"
                                android:layout_height="@dimen/_38pxh"
                                android:layout_marginBottom="@dimen/_27pxv"
                                android:layout_width="@dimen/_28pxh"
                                android:scaleType="fitXY"
                                android:src="@drawable/img_medal_icon"
                                tools:ignore="ContentDescription" tools:src="@drawable/img_medal_icon"/>
                            <LinearLayout android:gravity="start"
                                android:id="@+id/linearColumnprogress"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_5pxv"
                                android:layout_marginStart="@dimen/_9pxh"
                                android:layout_width="wrap_content" android:orientation="vertical">
                                <TextView android:ellipsize="end"
                                    android:id="@+id/txtProgress"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:singleLine="true"
                                    android:text="@{gettingStartedVM.gettingStartedModel.txtProgress}"
                                    style="@style/txtPoppinsbold15" tools:text="@string/lbl_progress"/>
                                <TextView
                                    android:id="@+id/txtDescription1"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5pxv"
                                    android:layout_width="match_parent"
                                    android:text="@{gettingStartedVM.gettingStartedModel.txtDescription1}"
                                    style="@style/txtPoppinsregular10" tools:text="@string/msg_earn_medals_to_unlock"/>
                            </LinearLayout>
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</layout>
